<h1>User info</h1>


<h1>New </h1>
<%= form_with model:@book,urlurl:'/books', local:true do |f| %>
<div class = "form-group">
  <label for = "book_title">Title</label>
  <%= f.text_field:title %>
</div>
<div class = "form-group">
  <label for = "book_opinion">Opinion</label>
  <%= f.text_area:body %>
</div>
<div class = "form-group">
  <%= f.submit 'Create Book', class: "btn btn-success" %>
</div>
<% end %>