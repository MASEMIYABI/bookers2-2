<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'list',user: @user,book: @book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f|%>
          <tr>
            <td>
              <%=link_to user_path(f.user) do%>
                <%= attachment_image_tag f.user, :image, fallback:"no_image.jpg", size: "100x100" %>
              <% end %>
              </td>
            <td><%=link_to f.title,book_path(f.id) %></td>
            <td><%=f.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
