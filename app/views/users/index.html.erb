<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'books/list',user: @user ,book: @book%>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class = 'table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @users.each do |f| %>
            <td><%= attachment_image_tag f, :image, fallback:"no_image.jpg", size: "40x40" %></td>
            <td><%= f.name %></td>
            <td><%= link_to "Show",user_path(f.id) %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>