<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'books/list',user: @user,book: @book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class = 'table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |f| %>
            <td>
              <%=link_to user_path(f.user)do%>
                <%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td><%= link_to t.title,book_path(t.id) %></td>
            <td><%= t.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

